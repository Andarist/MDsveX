{
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "commonjs",
			"esModuleInterop": true,
			"strict": true
		},
		"include": ["tests/**/*"]
	},
	"compilerOptions": {
		"outDir": "build",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"strict": true
	},
	"include": ["@types/**/*", "src/**/*"],
	"exclude": ["node_modules"]
}
